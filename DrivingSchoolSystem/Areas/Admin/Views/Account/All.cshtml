@using DrivingSchoolSystem.Core.Models.Account
@model IEnumerable<AccountModel>

@{
    ViewData["Title"] = "Всички Акаунти";
}

@section Links{
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
}

<div class="align-self-start mt-5 w-80">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <a asp-area="" asp-controller="StudentCard" asp-action="Add" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Добави акаунт</span></a>
            </div>
        </div>
    </div>

     <table class="table table-striped table-hover table-danger">
        <thead>
            <tr>
                <th>Име</th>
                <th>Телефон</th>
                <th>Длъжност</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.FullName</td>
                    <td>@account.PhoneNumber</td>
                    <td>@account.RoleName</td>
                   <td>
                    <a asp-area="Admin" asp-controller="Account" asp-action="Edit" 
                    asp-route-id="@account.Id" class="edit">
                        <i class="material-icons" title="Edit">&#xE254;</i>
                    </a>
                        <a href="#deleteEmployeeModal" onclick={SetDeleteUserId('@account.Id')} 
                        data-toggle="modal">
                            <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr>
</div>

<div id="deleteEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-area="Admin" asp-controller="Account" asp-action="Delete">
                <div class="modal-header">
                    <h4 class="modal-title">Изтриване на акаунт</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Сигурени ли сте че искате да изтриете акаунта?</p>
                    <p class="text-warning"><small>Това действие не може да бъде отменено.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="deleteUser"/>
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Отмени">
                    <input type="submit" id="deleteBtn" class="btn btn-danger" value="Изтрии">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteInput = document.getElementById("deleteUser");

        function SetDeleteUserId(userId) {
            deleteInput.setAttribute('value', userId);
        }
    </script>
}
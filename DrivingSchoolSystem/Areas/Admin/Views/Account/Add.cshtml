@using DrivingSchoolSystem.Core.Models.Account
@model AddAccountModel

@{
    ViewData["Title"] = "Добавяне на Акаунт";
    ViewBag.GenerateId = 0;
}

<div class="w-100 mb-auto mt-auto">

    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form id="registerForm" asp-area="Admin" asp-controller="Account" asp-action="Add" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.DrivingSchoolId" />
                <div class="text-center mb-3">
                    <label asp-for="@Model.Email">Имейл</label>
                    <input class="form-control " autocomplete="username" aria-required="true" 
                        asp-for="@Model.Email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.FirstName">Собствено име</label>
                    <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.FirstName" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.MiddleName">Бащино име</label>
                    <input class="form-control" autocomplete="new-password" aria-required="true" asp-for="@Model.MiddleName" />
                    <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.LastName">Фамилно име</label>
                    <input class="form-control" autocomplete="new-password" aria-required="true" asp-for="@Model.LastName" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNumber">Телефон</label>
                    <input class="form-control" autocomplete="new-password" aria-required="true" asp-for="@Model.PhoneNumber" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.RoleId">Длъжност</label>
                    <br />
                    <div class="d-flex justify-content-center fw-bold">
                        @foreach (var role in Model.Roles)
                        {
                            var functionalClass = role.Name == "Инструктор" ? "show" : "hide";
                            <input class="@functionalClass" type="radio"
                               asp-for="@Model.RoleId" id="@ViewBag.GenerateId" value="@role.Id" />
                            <label class="@functionalClass" for="@ViewBag.GenerateId">@role.Name</label>
                            <br />
                            ViewBag.GenerateId += 1;
                        }
                    </div>
                    <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
                    <div class="collapse">
                        <label asp-for="@Model.Categories"></label>
                        @for (int i = 0; i < @Model.Categories.Count(); i++)
                        {
                            <input asp-for="@Model.Categories[i].IsMarked">
                            <label asp-for="@Model.Categories[i].IsMarked">@Model.Categories[i].Name</label>
                            <input type="hidden" asp-for="@Model.Categories[i].Id" />
                            <input type="hidden" asp-for="@Model.Categories[i].Name" />
                        }
                        </div>
                    </div>
                <div class="text-center">
                    <button id="registerSubmit" type="submit" class="btn btn-primary">
                        Добави
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $(".show").click(function () {
                $(".collapse").collapse('show');
            });
            $(".hide").click(function () {
                $(".collapse").collapse('hide');
            });
        });
    </script>
}

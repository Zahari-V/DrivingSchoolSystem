@using DrivingSchoolSystem.Core.Models.Account
@model ProvidedEmailModel

@{
    ViewData["Title"] = "Register";
    Layout = "_HomePageLayout";
}

<h1 class="text-center">Enter Provided Email</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form  method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.DrivingSchoolId">Driving School</label>
                <select asp-for="@Model.DrivingSchoolId" class="form-control">
                    @foreach (var drivingSchool in Model.DrivingSchools)
                    {
                        <option value="@drivingSchool.Id">@drivingSchool.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.DrivingSchoolId" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Forward</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

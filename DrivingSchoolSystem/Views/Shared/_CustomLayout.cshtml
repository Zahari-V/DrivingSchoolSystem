<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DrivingSchoolSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrivingSchoolSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CustomStyle.css" asp-append-version="true" />
</head>
<body class="custom-font custom-color-background m-0 d-flex">

    <div class="w-25">
        <nav>
            <div class="d-flex flex-column sidenav p-3 shadow-lg color-yellow">
                <div class="fs-4 fw-bold custom-shadow border-bottom">
                    <a asp-controller="Home" asp-action="Index">
                        Система за Автошколи
                    </a>
                </div>
                <div class="fs-2 mb-auto">
                    <ul class="custom-shadow">
                        <li>
                            <a asp-controller="Home" asp-action="Index">
                                Начало
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="About">
                                За нас
                            </a>
                        </li>
                    </ul>
                </div>
                <partial name="_loginpartial" />
            </div>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="w-100 h-100">
            <div class="h-100 d-flex pt-3 pb-3">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

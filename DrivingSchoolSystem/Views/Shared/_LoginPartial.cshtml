@using Microsoft.AspNetCore.Identity
@using DrivingSchoolSystem.Infrastructure.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="login-partial-container">
@if (!SignInManager.IsSignedIn(User))
{
    <a class="btn btn-success" asp-controller="User" asp-action="Login">Влез</a>
     <a class="btn btn-danger" asp-controller="User" asp-action="ProvidedEmail">Регистрирай се</a>
}
else
{
    <a class="btn btn-success" asp-controller="User" asp-action="Logout">Изход</a>
}
</div>
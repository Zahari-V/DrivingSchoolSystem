
<div class="fs-4 fw-bold custom-shadow border-bottom">
    <a asp-controller="Home" asp-action="Index">
        Система за Автошколи
    </a>
</div>
@if (!User.Identity?.IsAuthenticated ?? false)
{
    <div class="fs-2 mb-auto">
        <ul class="custom-shadow">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    Начало
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="About">
                    За нас
                </a>
            </li>
        </ul>
    </div>
}
else if(User.IsInRole("Admin")) {
    <div class="fs-2 mb-auto">
        <ul class="custom-shadow">
            <li>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    Начало
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index">
                    Акаунти
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Course" asp-action="Index">
                    Курсове
                </a>
            </li>
        </ul>
    </div>
}


<div class="fs-4 fw-bold custom-shadow border-bottom">
    <a asp-area="" asp-controller="Home" asp-action="Index">
        Система за Автошколи
    </a>
</div>
<div class="fs-2 mb-auto">
    <ul class="custom-shadow">
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                Начало
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="About">
                За нас
            </a>
        </li>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <li>
                <a asp-area="" asp-controller="StudentCard" asp-action="All">
                    Талони
                </a>
            </li>
        }

        @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
        {
            <li class="dropdown">
                <a id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle color-yellow">
                   Администрация
                </a>
                <ul aria-labelledby="dropdownMenu1" class="dropdown-menu custom-color-background w-100 border-0 shadow">
                    <li>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <span class="icon icon-dashboard"></span>
                            Начало
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="All">
                            Акаунти
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Course" asp-action="All">
                            Курсове
                        </a>
                    </li>
                    @if (User.IsInRole("Manager"))
                    {
                        <li>
                            <a class="dropdown-item" asp-area="Admin" 
                            asp-controller="DrivingSchool" asp-action="Profile">
                                Автошколa
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a class="dropdown-item" asp-area="Admin" 
                            asp-controller="DrivingSchool" asp-action="All">
                                Автошколи
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
@model StudentCardAddServiceModel

@{
    ViewData["Title"] = "Добавяне на Талон";
}

<div class="row align-items-center w-100">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="col-md-4 offset-md-4">
        <form asp-area="" asp-controller="StudentCard" asp-action="Add" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.StudentId">Изберете Ученик</label>
                <select asp-for="@Model.StudentId" class="form-control">
                    @for (int i = 0; i < Model.Students.Count(); i++)
                    {
                        <option value="@Model.Students[i].Id">@Model.Students[i].FullName</option>
                    }
                </select>
                @for (int i = 0; i < Model.Students.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Students[i].FullName" />
                    <input type="hidden" asp-for="@Model.Students[i].Id" />
                }
                <span asp-validation-for="@Model.StudentId" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.CourseId">Изберете Курс</label>
                <select asp-for="@Model.CourseId" class="form-control">
                    @for (int i = 0; i < Model.Courses.Count(); i++)
                    {
                        <option value="@Model.Courses[i].Id">
                            @Model.Courses[i].Name ------ @Model.Courses[i].StartDate
                        </option>
                    }
                </select>
                @for (int i = 0; i < Model.Courses.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Courses[i].Id" />
                    <input type="hidden" asp-for="@Model.Courses[i].Name" />
                    <input type="hidden" asp-for="@Model.Courses[i].StartDate" />
                }
                <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.InstructorId"/>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Добави</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

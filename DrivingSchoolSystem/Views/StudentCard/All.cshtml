@model IEnumerable<StudentCardModel>

@{
    ViewData["Title"] = "Моите Талони";
}

@section Links{
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
}

<div class="align-self-start mt-5 w-80">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            @if (User.IsInRole(RoleConstant.Instructor))
            {
                <div class="col-sm-6">
                    <a asp-area="" asp-controller="StudentCard" asp-action="Add" class="btn btn-success">
                        <i class="material-icons">&#xE147;</i> <span>Добави талон</span>
                    </a>
                </div>
            }
        </div>
    </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm">
        @foreach (var studentCard in Model)
        {
            <div class="col mb-3">
              <div class="card">
                <img src="@studentCard.CategoryImageUrl" alt="Cover" class="card-img-top">
                <div class="card-body text-center">
                  <img src="@studentCard.StudentImageUrl" style="width:100px;margin-top:-65px" alt="User" class="img-fluid img-thumbnail rounded-circle border-0 mb-3">
                  <h5 class="card-title">@studentCard.StudentFullName</h5>
                  <p>@studentCard.CategoryName</p>
                    <div class="d-flex">
                        <label asp-for="@studentCard.InstructorFullName"></label>
                        <span>@studentCard.InstructorFullName</span>
                    </div>
                  <div class="d-flex">
                      <label asp-for="@studentCard.DrivedHours"></label>
                      <span>@studentCard.DrivedHours</span>
                  </div>
                </div>
                <div class="card-footer">
                    <div>
                            <a class="btn btn-warning">
                        Преглед
                      </a>
                    </div>
                  @if (User.IsInRole(RoleConstant.Instructor))
                    {
                    <div>
                        <a class="btn btn-success">
                            Добави час
                        </a>
                    </div>
                    }
                </div>
              </div>
            </div>
        }
        </div>
    <hr>
</div>

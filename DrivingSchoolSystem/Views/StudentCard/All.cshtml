@model IEnumerable<StudentCardModel>

@{
    ViewData["Title"] = "Моите Талони";
}

@section Links{
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
}

<div class="w-75 mt-4">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <a asp-area="" asp-controller="StudentCard" asp-action="Add" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Добави талон</span></a>
            </div>
        </div>
    </div>

        <div class="row">
        @foreach (var studentCard in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top text-center student-card-img p-2" src="@studentCard.ImageUrl" alt="Category Image">
                    <div class="card-body">
                        <h4 class="card-title btn-danger p-2">
                            @studentCard.CategoryName
                        </h4>
                        <div class="card-text text-start">
                            <div>
                                <label asp-for="@studentCard.StudentFullName"></label>
                                <span>@studentCard.StudentFullName</span>
                            </div>
                            <div>
                                <label asp-for="@studentCard.DrivedHours"></label>
                                <span>@studentCard.DrivedHours</span>
                            </div>
                            <div>
                                <label asp-for="@studentCard.InstructorFullName"></label>
                                <span>@studentCard.InstructorFullName</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    <hr>
</div>
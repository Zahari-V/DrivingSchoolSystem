@{
    ViewData["Title"] = "Home Page";
    Layout = "_HomePageLayout";
}

<div class="text-center custom-font">
    <div class="row align-items-center">
        <div class="col fs-3 fw-bold">
            <div>
                <p>Log in and follow the registered courses in your Driving School</p>
            </div>
            <a class="btn btn-success w-25 pt-3 pb-3 mt-3 mb-3" asp-controller="Account" asp-action="Login">Log in</a>
        </div>
        <div class="col">
            <img src="/images/TestHomePageBackground.jpg" alt="Home Page Image" class="custom-image" />
        </div>
        <div class="col fs-3 fw-bold">
            <div>
                <p>Register and get access to the registered courses in your Driving School</p>
            </div>
            <a class="btn btn-danger w-50 pt-3 pb-3 mt-3 mb-3" asp-controller="Account"
               asp-action="ProvidedEmail">Register</a>
        </div>
    </div>
</div>
